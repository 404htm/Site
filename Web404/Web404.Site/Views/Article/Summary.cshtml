@model PageSummary

<summary class="panel panel-default sys-panel">
	<div class="panel-heading">
		@Model.Date.ToShortDateString() -
		<h3>@Model.Title</h3><span class="ui-icon ui-icon-newwin"></span>
		<span style="float: right;">
			<a href="@Url.Action("About")" class="sys-ajax">
				<span class="glyphicon glyphicon-collapse-down"></span>
			</a>
		</span>
	</div>

	<div class="panel-body sys-target">

		@Html.Raw(Model.Summary)

		@if (!Model.IsComplete)
		{
			<text>...</text>
		}
	</div>

	<div class="tags panel-footer">
		@foreach (var tag in Model.Tags)
		{
			<span>@tag.Name</span>
		}
	</div>
</summary>