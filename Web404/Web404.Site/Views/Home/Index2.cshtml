@{
	@model List<Web404.CMS.PageSummary>
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout2.cshtml";
}

@foreach (var summary in Model)
{
	<div class="tutorial section">


		<h3>@summary.Date.ToShortDateString() - @summary.Title <span class="ui-icon ui-icon-newwin"></span></h3>

		<div class="summary">
			@Html.Raw(summary.Summary)

			@if (!summary.IsComplete)
			{
				<text>...</text>
			}
		</div>

		<div class="tags">
			@foreach (var tag in summary.Tags)
			{
				<span>@tag.Name</span>
			}
		</div>

	</div>

}




<div class="tutorial section">
	<h3>Coding Wallpapers</h3>
	<div class="preview">
		<img src="~/Content/PostFiles/wallpaper_11_18_2013/preview.png" />
	</div>
	<div class="summary">
		<p>
			I was planning to put together something really informative and useful for my first post - that isn't happening apparently so here are some shiny function plots.
			I was bored earlier this week and decided to draw some random functions in linqpad.
		</p>
