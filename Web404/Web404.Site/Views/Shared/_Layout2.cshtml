<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/Styles")
    
</head>
<body>
	<header>
		<h1><a href="@Url.Action("index","home")">404htm/@ViewBag.Title</a></h1>
		<div style="float: right;">
			@*<input id="search" placeholder="Search" />*@
		</div>
		<nav>
			<ul>
				<li>@Html.ActionLink("Home", "Index", null, new { id = "home" })</li>
				<li>@Html.ActionLink("Tools", "Tools", null, new { id = "tools" })</li>
				<li>@Html.ActionLink("Projects", "Projects", null, new { id = "projects" })</li>
				<li>@Html.ActionLink("About", "About", null, new { id = "contact" })</li>
			</ul>

		</nav>
	</header>
	<br />
	<div class="container-fluid">
		<div class="row">
			<div id="MainColumn" class="col-xs-12 col-sm-12 col-md-8 col-lg-9" style="background-color: red;">
				@RenderBody()
				Main
			</div>
			<div id="RightColumn" class="col-xs-12 col-sm-12 col-md-4 col-lg-3" style="background-color: orange;">
				<div class="container-fluid">
					<div class="row">

						<div class="col-xs-0 col-sm-4 col-md-12 col-lg-12">
							<div class="header">News</div>
							<strong>1/3/2014</strong>
							<div class="content">
								<p>Site Launch - We'll be finalizing the site layout and structure over the next few days. </p>

							</div>
						</div>

						<div class="col-xs-6 col-sm-4 col-md-12 col-lg-12">
							<div class="header">Tags</div>
							<svg width="100%" height="150px" id="tags" title="Because I'm really sick of tag clouds"></svg>
						</div>

						<div class="col-xs-6 col-sm-4 col-md-12 col-lg-12">
							<div class="header">Contact</div>
							<div class="content">
								<span class="glyphicon glyphicon-search"></span>

								<a href="mailto:site@404htm.com" class="contact-email">Email</a>
								<a href="http://lnkd.in/h6TQRw" class="contact-li">LinkedIn</a>
								<a href="http://stackoverflow.com/users/2618921/kelly-gendron" class="contact-so">Stack Overflow</a>
								<a href="https://github.com/404htm" class="contact-github">GitHub</a>
							</div>
						</div>
					</div>

				</div>


			</div>

		</div>


	</div>

	<br />

	<footer class="navbar-fixed-bottom footer">
		<div class="footer-top">
			<div style="float: left;">
				<span class="glyphicon glyphicon-copyright-mark"></span>
				Kelly Gendron @DateTime.Now.Year
			</div>
			<span style="float: right;"><a href="mailto:site@404htm.com" id="email">site@404htm.com</a></span>
		</div>
	</footer>

	@Scripts.Render("~/bundles/default")
	<link href='http://fonts.googleapis.com/css?family=Sintony' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
</body>
</html>